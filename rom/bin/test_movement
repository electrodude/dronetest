if drone == nil then
	print("this program can only run on drones.")
	return false
end


while true do
--	print("### 0 "..sys.id.." "..getId())
	sys.yield()
	if sys:receiveEvent({"input"}) ~= nil then
		print("RECEIVED INPUT, ABORT EPIC MOVES NOW!")
		break
	end
	for i=1,4,1 do
		os.sleep(0.5)
		drone.forward()
		os.sleep(0.5)
		drone.back()
		os.sleep(0.5)
		drone.turnLeft()
	end
end
return true
