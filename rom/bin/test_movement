if drone == nil then
	print("this program can only run on drones.")
	return false
end

print("SYSTEM GETTING DOWN NOW!")
local pos = {x=0,y=0,z=0}
while true do
	print("### 0 "..sys.id.." "..getId())
	sys.yield()

	if sys:receiveEvent({"input"}) ~= nil then
		print("RECEIVED INPUT, ABORT EPIC MOVES NOW!")
		break
	end

	drone.forward()
	drone.back()
	drone.turnLeft()
	drone.forward()
	drone.back()
	drone.turnLeft()
	drone.forward()
	drone.back()
	drone.turnLeft()
	drone.forward()
	drone.back()
	drone.turnLeft()
end
return true